            "url": {
                "en": "\/scriptTags\/scriptTag id"
            },
            "description": {
                "en": "Used to retrieve a specific item."
            },
            "parameters": [],
            "example": {
                "url": "\/scriptTags\/c2NyaXB0VGFnLWlkPTc=",
                "statusCode": "200"
            }
        },
        "getCollection": {
            "method": "GET",
            "url": {
